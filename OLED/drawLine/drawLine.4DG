#platform "GOLDELOX"

#inherit "4DGL_16bitColours.fnc"

func main()
    var x, y;

    gfx_ScreenMode(PORTRAIT);

    print("Hello World");

    // these make the line go across the whole screen
    x := 127;
    y := 159;

    gfx_PutPixel(x,y,BLUE);
    gfx_Line(0, 0, x, y, GREEN);

    // loop forever
    repeat
    forever

endfunc
